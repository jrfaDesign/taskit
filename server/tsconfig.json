{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // nodenext
    "moduleResolution": "node", // nodenext
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/data/**/*.json", "prisma/**/*"]
}
